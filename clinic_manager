    <elevenlabs-convai agent-id="agent_3801kbc3ga40f84s22byz66e0dbe"></elevenlabs-convai>
    <script src="https://unpkg.com/@elevenlabs/convai-widget-embed" async type="text/javascript"></script>

    <!-- Custom Script to Connect the Button to the Widget -->
    <script>
        function triggerAiAgent() {
            const agent = document.querySelector('elevenlabs-convai');
            if (agent && agent.shadowRoot) {
                // Find the internal button inside the Shadow DOM and click it
                const btn = agent.shadowRoot.querySelector('button');
                if (btn) {
                    btn.click();
                } else {
                    console.error("Agent button not found inside shadow root.");
                    alert("The AI Agent is loading, please wait a moment.");
                }
            } else {
                // Better error handling for preview mode failure
                const banner = document.getElementById('preview-warning');
                if (banner && !banner.classList.contains('hidden')) {
                     alert("The agent is blocked in this preview. Please download the file to speak.");
                } else {
                     alert("Sarah (AI Agent) is warming up... please try again in 2 seconds.");
                }
            }
        }
    </script>

