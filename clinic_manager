    <!-- Error Handler for Preview Environment -->
    <script>
        window.addEventListener('error', function(event) {
            // This catches the specific ElevenLabs widget error caused by iframe restrictions
            if (event.message && (event.message.includes('getUserMedia') || event.message.includes('MediaDevices') || event.message.includes('read only property'))) {
                const banner = document.getElementById('preview-warning');
                if (banner) banner.classList.remove('hidden');
            }
        });
    </script>
